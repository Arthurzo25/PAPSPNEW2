@model PAPSPNEW.Models.PontoTuristico

@{
    ViewData["Title"] = "Details";
}

<h1>Informações</h1>

<div>
    <h4>Ponto Turistico</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomePontoTuristico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomePontoTuristico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoPontoTuristico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoPontoTuristico)
        </dd>

        <img class="Imagem" width="10%" height="25%" 
            src="~/Image/@Html.DisplayFor(model => model.IdPontoTuristico)_.jpg">

    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Dia da Semana
                </th>
                <th>
                   Inicio
                </th>
                <th>
                   Final
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HorarioAtendimentos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaSemana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorarioInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorarioFim)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>
                    E-Mail
                </th>
                <th>
                    Telefone 1
                </th>
                <th>
                    Telefone Comercial
                </th>
                <th>
                    Celular
                </th>
                <th>
                    Whatsapp
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TipoContatos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneComer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Whatsapp)
                    </td>


                </tr>
            }
        </tbody>
    </table>


</div>
